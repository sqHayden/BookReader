<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/mainBackground"
    >
    <LinearLayout
        android:id="@+id/line_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="3dp"
        android:weightSum="1"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/night_back1"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.05"
            />
        <TextView
            android:id="@+id/text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.945"
            android:text="阅读口味"
            android:textAlignment="center"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/little_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="@string/question"
            android:background="@drawable/round"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_top1"
        android:layout_below="@id/line_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >
        <ImageView android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/hill3" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            >
            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="完善资料"
                android:layout_alignParentTop="true"
                android:paddingTop="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv"
                android:layout_alignParentLeft="true"
                android:text="让我们更了解你的口味"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line_top2"
        android:layout_below="@id/line_top1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="1"
        android:orientation="horizontal"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="?attr/stoker"
            android:layout_weight="0.4999"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男生小说"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="?attr/stoker"
            android:layout_weight="0.4999"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_top2"
        android:layout_marginTop="30dp"
        android:weightSum="1">

        <Button
            android:id="@+id/buttonA1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_weight="0.33333333333333333"
            android:background="@drawable/layout"
            android:text="玄幻仙侠"
            android:layout_margin="10dp"
            />
        <!--android:background="@drawable/layout"-->
        <Button
            android:id="@+id/buttonA2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_weight="0.33333333333333333"
            android:background="@drawable/layout"
            android:text="科幻奇幻"
            android:layout_margin="10dp"
            />

        <Button
            android:id="@+id/buttonA3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_weight="0.33333333333333333"
            android:background="@drawable/layout"
            android:text="军事谍战"
            android:layout_margin="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:weightSum="1">

        <Button
            android:id="@+id/buttonA4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_weight="0.33333333333333333"
            android:background="@drawable/layout"
            android:text="官场职场"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/buttonA5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_weight="0.33333333333333333"
            android:background="@drawable/layout"
            android:text="悬疑探险"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/buttonA6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_weight="0.33333333333333333"
            android:background="@drawable/layout"
            android:text="灵异恐怖"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:weightSum="1">

        <Button
            android:id="@+id/buttonA7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_weight="0.33333333333333333"
            android:background="@drawable/layout"
            android:text="都市生活"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/buttonA8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_weight="0.33333333333333333"
            android:background="@drawable/layout"
            android:text="同人网游"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/buttonA9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_weight="0.33333333333333333"
            android:background="@drawable/layout"
            android:text="历史传奇"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line3"
        android:weightSum="1">

        <Button
            android:id="@+id/buttonA10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_weight="0.313"
            android:text="短篇小说"
            android:layout_margin="10dp"
            android:background="@drawable/layout"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line5"
        android:layout_below="@id/line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="?attr/stoker"
            android:layout_weight="0.4999"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女生小说"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="?attr/stoker"
            android:layout_weight="0.4999"
            />
    </LinearLayout>

    <TableLayout
        android:id="@+id/table1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/line5"
        android:layout_marginTop="30dp"
        android:padding="3dip"
        android:stretchColumns="*">

        <TableRow>

            <Button
                android:id="@+id/buttonB1"
                android:layout_width="1dip"
                android:text="都市言情"
                android:layout_margin="10dp"
                android:background="@drawable/layout"
                />

            <Button
                android:id="@+id/buttonB2"
                android:layout_width="1dip"
                android:text="穿越架空"
                android:layout_margin="10dp"
                android:background="@drawable/layout"
                />

            <Button
                android:id="@+id/buttonB3"
                android:layout_width="1dip"
                android:text="仙侠幻情"
                android:layout_margin="10dp"
                android:background="@drawable/layout"
                />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/buttonB4"
                android:layout_width="1dip"
                android:text="灵异推理"
                android:layout_margin="10dp"
                android:background="@drawable/layout"
                />

            <Button
                android:id="@+id/buttonB5"
                android:layout_width="1dip"
                android:text="同人网游"
                android:layout_margin="10dp"
                android:background="@drawable/layout"
                />

            <Button
                android:id="@+id/buttonB6"
                android:layout_width="1dip"
                android:text="短片美文"
                android:layout_margin="10dp"
                android:background="@drawable/layout"
                />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/buttonB7"
                android:layout_width="1dip"
                android:text="种田重生"
                android:layout_margin="10dp"
                android:background="@drawable/layout"
                />

            <Button
                android:id="@+id/buttonB8"
                android:layout_width="1dip"
                android:text="宫斗宅斗"
                android:layout_margin="10dp"
                android:background="@drawable/layout"/>

            <Button
                android:id="@+id/buttonB9"
                android:layout_width="1dip"
                android:text="浪漫青春"
                android:layout_margin="10dp"
                android:background="@drawable/layout"
                />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/buttonB10"
                android:layout_width="1dip"
                android:text="古风古韵"
                android:layout_margin="10dp"
                android:background="@drawable/layout"
                />
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:id="@+id/line6"
        android:layout_below="@id/table1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:weightSum="1"
        android:orientation="horizontal"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="?attr/stoker"
            android:layout_weight="0.4999"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出版图书"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="?attr/stoker"
            android:layout_weight="0.4999"
            />
    </LinearLayout>

    <TableLayout
        android:id="@+id/table2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/line6"
        android:layout_marginTop="30dp"
        android:padding="3dip"
        android:stretchColumns="*">

        <TableRow>

            <Button
                android:id="@+id/buttonC1"
                android:layout_width="1dip"
                android:background="@drawable/layout"
                android:text="小说作品"
                android:layout_margin="10dp"/>


            <Button
                android:id="@+id/buttonC2"
                android:layout_width="1dp"
                android:background="@drawable/layout"
                android:text="文学作品"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/buttonC3"
                android:layout_width="1dip"
                android:background="@drawable/layout"
                android:text="文化艺术"
                android:layout_margin="10dp"/>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/buttonC4"
                android:layout_width="1dip"
                android:background="@drawable/layout"
                android:text="人文社科"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/buttonC5"
                android:layout_width="1dip"
                android:background="@drawable/layout"
                android:text="经济管理"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/buttonC6"
                android:layout_width="1dip"
                android:background="@drawable/layout"
                android:text="两性情感"
                android:layout_margin="10dp"
                />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/buttonC7"
                android:layout_width="1dip"
                android:background="@drawable/layout"
                android:text="成功励志"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/buttonC8"
                android:layout_width="1dip"
                android:background="@drawable/layout"
                android:text="亲子少儿"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/buttonC9"
                android:layout_width="1dip"
                android:background="@drawable/layout"
                android:text="品质生活"
                android:layout_margin="10dp"/>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/buttonC10"
                android:layout_width="1dip"
                android:background="@drawable/layout"
                android:text="自然科学"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/buttonC11"
                android:layout_width="1dip"
                android:background="@drawable/layout"
                android:text="计算机"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/buttonC12"
                android:layout_width="1dip"
                android:background="@drawable/layout"
                android:text="培训考试"
                android:layout_margin="10dp"/>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/buttonC13"
                android:layout_width="1dip"
                android:background="@drawable/layout"
                android:text="外文外版"
                android:layout_margin="10dp"
                />

            <Button
                android:id="@+id/buttonC14"
                android:layout_width="1dip"
                android:background="@drawable/layout"
                android:text="杂志期刊"
                android:layout_margin="10dp"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>
        </LinearLayout>
    </ScrollView>