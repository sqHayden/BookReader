<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.idx.reader">
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.idx.reader.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.idx.reader.SettingActivity"
        android:screenOrientation="portrait"
        >
        </activity>

        <activity android:name="com.idx.reader.ReadChooseActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            >
        </activity>

        <activity android:name="com.idx.reader.loginaplication.LoginActivity"
            android:theme="@style/AppTheme"
            >
        </activity>
        <activity android:name="com.idx.reader.loginaplication.RegisterActivity"> </activity>
        <activity android:name="com.idx.reader.loginaplication.UserActivity"> </activity>
        <activity android:name="com.idx.reader.loginaplication.FindActivity"> </activity>
        <activity android:name="com.idx.reader.loginaplication.FindSuccessActivity"> </activity>
        <activity android:name="com.idx.reader.loginaplication.ChangPasswordActivity"> </activity>
    </application>
</manifest>